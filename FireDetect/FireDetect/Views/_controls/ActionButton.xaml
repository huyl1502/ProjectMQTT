<UserControl x:Class="System.Windows.Controls.ActionButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Foreground="White"
             Margin="2"
             d:DesignHeight="40" d:DesignWidth="80">
    <Border 
            Background="Black"
            BorderThickness="1"
            BorderBrush="White"
            CornerRadius="4"
            Padding="8, 3"
            VerticalAlignment="Center"
            Cursor="Hand"
            >
        <TextBlock x:Name="caption"
                   Foreground="White"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center">Button</TextBlock>

        <Border.Style>
            <Style>
                <Setter Property="Border.Opacity" Value="1" />
                <Style.Triggers>
                    <Trigger Property="Border.IsMouseOver" Value="True">
                        <Setter Property="Border.Opacity" Value="0.9" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
    </Border>
</UserControl>
